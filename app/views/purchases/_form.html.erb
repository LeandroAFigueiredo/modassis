<%= form_with(model: @purchase, local: true) do |form| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation">   
      <ul>
        <% purchase.errors.full_messages.each do |message| %>
        <script>
          $.notify("<%= message %>", "error");
        </script>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1> <%= "#{Purchase.model_name.human(count: 2)}"%></h1>

  <div class="row">
    <div class="col-lg-12">
      <form>  
          <div class="form-group row">
            <div class="col-md-4 mb-3">
              <%= form.collection_select(:customer_id, @customer_options_for_select, :id, :nome) %>
            </div> 
        </div> 

      <br />
      <br />      

  <div class="row">
    <div class="col-auto">

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Ref.</th>
            <th>Produto</th>
            <th>Qntd</th>
            <th>Valor</th>
          </tr>
        </thead>

        <tbody>
          <tr>
           <td> <%= form.collection_select(:product_id, @product_options_for_select, :id, :referencia) %> </td>
          
          <td><%= form.text_field :product, class: "form-control", placeholder: "* Produto ", "aria-describedby": true, required: true, disabled: true %></td>

          <div id= "items">
          
             <%= form.fields_for :quantidade do |items_fields| %>
              <%= render partial: "item_fields", locals: { form: items_fields } %>
              <% end %> 
               
            
           
          </div>
     
           <td><%= number_to_currency(purchase.stock.preco) %></td>

          </tr>
        </tbody>




      </table>
    </div>
  </div>

 

        <div class="field">
          <%= form.submit "Enviar", class: "btn btn-primary" %>
        </div>

      </form>
  </div>

<% end %>

