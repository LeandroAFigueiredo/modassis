<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">   
      <ul>
        <% product.errors.full_messages.each do |message| %>
        <script>
          $.notify("<%= message %>", "error");
        </script>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1> <%= "#{Product.model_name.human(count: 1)}"%></h1>

  <div class="row">
    <div class="col-lg-12">
      <form>  

        <div class="form-group row">
          <div class="col-sm-4 mb-3">
            <%= form.text_field :referencia, class: "form-control", placeholder: "* Referência", "aria-describedby": true, required: true %> 
          </div>

          <div class="col-md-4 mb-3">
          <%= form.text_field :descricao, class: "form-control", placeholder: "* Descrição ", "aria-describedby": true, required: true %>
          </div>
          </div>

          <div class="form-group row">
            <div class="col-md-4 mb-3">
              <%= form.text_field :cor, class: "form-control", placeholder: "* Cor ", "aria-describedby": true, required: true %>
            </div>

          </div>  

        </div>

        <div class="field">
          <%= form.submit "Enviar", class: "btn btn-primary" %>
          <%= link_to 'Voltar', products_path, class: "btn btn-success" %>
        </div>

      </form>
  </div>

<% end %>
