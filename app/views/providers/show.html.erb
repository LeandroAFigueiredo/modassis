<h1> <%= "#{Provider.model_name.human(count: 1)}"%></h1>

<form>
  <% if (!@provider.nome.blank? && !@provider.cpf.blank?) %>
  <div class="form row">
    <div class="col-md-4 mb-3">
      <strong>Nome: </strong>
        <%= @provider.nome %>
    </div>

    <div class="col-md-4 mb-3">
      <strong>CPF: </strong> 
        <%= @provider.cpf %>
    </div>
  </div>

    <% elsif (!@provider.nome.blank? && !@provider.cnpj.blank?) %>
      <div class="form row">
    <div class="col-md-4 mb-3">
      <strong>Nome Fantasia: </strong>
        <%= @provider.nome %>
    </div>

    <div class="col-md-4 mb-3">
      <strong>CNPJ: </strong> 
        <%= @provider.cnpj %>
    </div>
  </div>

  <% end %>
    
  <br/>

  <label> Endereço</label>

  <div class="table table-bordered"> 

    <div class="form row">

      <div class="col-md-4 mb-3">
        <strong>Endereço: </strong>    
        <%= @provider.end_logr %>
      </div>
      
      <div class="col-md-4 mb-3">
        <strong>Número: </strong>    
        <%= @provider.end_num %>
      </div>
      
    </div>

    <div class="form row">

      <div class="col-md-4 mb-3">
        <strong>Complemento: </strong>    
        <%= @provider.end_compl %>
      </div>
      
      <div class="col-md-4 mb-3">
        <strong>CEP: </strong>    
        <%= @provider.cep %>
      </div>
    </div>

      <div class="form row">

      <div class="col-md-4 mb-3">
         <strong>Cidade: </strong>    
        <%= @provider.end_cid %>
      </div>
      
      <div class="col-md-4 mb-3">
         <strong>UG: </strong>    
        <%= @provider.end_ug %>
      </div>
      
    </div>
   </div>
 
  <label> Telefone</label>

  <div class="table table-bordered"> 

    <div class="form row">

      <div class="col-md-4 mb-3">
        <strong>Telefone Fixo: </strong>    
        <%= @provider.tel_fixo %>
      </div>
      
      <div class="col-md-4 mb-3">
        <strong>Celular: </strong>    
        <%= @provider.tel_cel %>
      </div>
      
    </div>
   </div>

<br/>
  <div class="field">
    <%= link_to 'Editar', edit_provider_path(@provider), class: "btn btn-primary" %>
    <%= link_to 'Voltar', providers_path, class: "btn btn-success" %>
  </div>

</form>