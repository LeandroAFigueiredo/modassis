<%= form_with(model: provider, local: true) do |form| %>
  <% if provider.errors.any? %>
    <div id="error_explanation">   
      <ul>
      <% provider.errors.full_messages.each do |message| %>
        <script>
          $.notify("<%= message %>", "error");
        </script>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1> <%= "#{Provider.model_name.human(count: 1)}"%></h1>

  <div class="row">
    <div class="col-lg-12">
      <form> 
        <div id="accordion">
			   <div class="panel">
				  <div class="panel-header" id="headingOne">
					 <h5 class="mb-0">
						<a class="btn btn-default" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
							CPF
						</a>
            
            <a class="btn btn-default collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              CNPJ
            </a>
					 </h5>
				  </div>

				  <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
					 <div class="panel-body">
              <div class="form-group row">
               <div class="col-sm-4 mb-3">
						    <%= form.text_field :cpf, id: "cpf", class: "form-control", maxlength: "14" %>
					     </div>
              </div>
           </div>
				  </div>

			  
          <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
				    <div class="panel-body">
              <div class="form-group row">
                <div class="col-sm-4 mb-3">
					       <%= form.text_field :cnpj, id: "cnpj", class: "form-control", maxlength: "18" %>
				        </div>
              </div>
            </div>
			    </div>
		    </div>    
      </div>
      
      <br/>

  	   <div class="table"> 
            <div class="form-group row">
              <div class="col-sm-4 mb-3">
                <%= form.text_field :nome, class: "form-control", placeholder: "Nome - Nome Fantasia" %> 
              </div>
            </div>
          </div>

          <label> Endereço</label>
          <div class="table"> 
            <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.text_field :end_num, id: "numend", class: "form-control" %>
              </div>

              <div class="col-md-4 mb-3">
                <%= form.text_field :end_logr, class: "form-control", placeholder: " Endereço"%>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= form.text_field :end_num, id: "numend", class: "form-control" %>
              </div>
              
            </div>

            <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.text_field :end_compl, class: "form-control", placeholder: " Complemento"%>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= form.text_field :cep, id: "cep", class: "form-control", placeholder: " CEP", id: "cep" %>
              </div>
            </div>

              <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.text_field :end_cid, class: "form-control", placeholder: " Cidade"%>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= form.select :end_ug, options_for_states(@provider.end_ug),  class: "form-control",placeholder: " UG" %>
              </div>
              
            </div>
           </div>
         
          <label>* Telefone</label>

          <div class="table"> 

            <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.telephone_field :tel_fixo, class: "form-control", id: "phoneFixo", maxlength: "14" %>
              </div>
              
              <div class="col-md-4 mb-3">
               <%= form.telephone_field :tel_cel, class: "form-control", id: "phoneCel", maxlength: "15" %>
              </div>

              </div>

           </div>

          <div class="field">
            <%= form.submit "Enviar", class: "btn btn-primary" %>
            <%= link_to 'Voltar', providers_path, class: "btn btn-success" %>
          </div>

      </form>

    </div>

  </div>

<% end %>
