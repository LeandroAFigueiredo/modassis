
<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">   
      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <script>
          $.notify("<%= message %>", "error");
        </script>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1> <%= "#{Customer.model_name.human(count: 1)}"%></h1>

  <div class="row">
    <div class="col-lg-12">
      <form>  

        <div class="form-group row">
          <div class="col-sm-4 mb-3">
            <%= form.text_field :nome, class: "form-control", placeholder: "* Nome", "aria-describedby": true, required: true %> 
          </div>

          <div class="col-md-4 mb-3">
            <%= form.email_field :email, class: "form-control", placeholder: " E-mail" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4 mb-3">
            <%= form.text_field :cpf, id: "cpf", class: "form-control", "aria-describedby": true, required: true, maxlength: "14"%>
          </div>
            
          <div class="col-md-4 mb-3">
            <%= form.text_field :dt_nasc, id: "date", class: "form-control", maxlength: "10"%>
          </div>
            
        </div>

        <div class="row">

          <div class="col-md-4 mb-3">
            <%= form.text_field :rg, class: "form-control", placeholder: " RG"%>
          </div>
            
          <div class="col-md-4 mb-3">
            <%= form.text_field :rg_emissor, class: "form-control", id: "rg_emissor" %>
          </div>
            
        </div>
          <br/>

          <label> Endereço</label>
          <div class="table"> 
            <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.text_field :end_logr, class: "form-control", placeholder: " Endereço"%>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= form.text_field :end_num, id: "numend", class: "form-control" %>
              </div>
              
            </div>

            <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.text_field :end_compl, class: "form-control", placeholder: " Complemento"%>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= form.text_field :cep, id: "cep", class: "form-control", placeholder: " CEP", id: "cep" %>
              </div>
            </div>

              <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.text_field :end_cid, class: "form-control", placeholder: " Cidade"%>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= form.select :end_ug, options_for_states(@customer.end_ug),  class: "form-control",placeholder: " UG" %>
              </div>
              
            </div>
           </div>
         
          <label>* Telefone</label>

          <div class="table"> 

            <div class="form-group row">

              <div class="col-md-4 mb-3">
                <%= form.telephone_field :tel_fixo, class: "form-control", id: "phoneFixo", maxlength: "14" %>
              </div>
              
              <div class="col-md-4 mb-3">
               <%= form.telephone_field :tel_cel, class: "form-control", id: "phoneCel", maxlength: "15" %>
              </div>

              </div>

              <div class="form-group row">
                <div class="col-md-4 mb-3">
                 <%= form.telephone_field :tel_trab, class: "form-control", id: "phoneTrab", maxlength: "14" %>
                </div>
            </div>

           </div>

          <div class="field">
            <%= form.submit "Enviar", class: "btn btn-primary" %>
            <%= link_to 'Voltar', customers_path, class: "btn btn-success" %>
          </div>

        </form>

      </div>

    </div>

<% end %>