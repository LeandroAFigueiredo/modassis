<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track' => true %>

<div class="wrapper fadeInDown">

	<div id="formContent">
		<!-- Tabs Titles -->
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
			<!-- Login Form -->  

			<div class="field">

				<%= form.label :email %><br />
				<%= form.email_field :email, autofocus: true, autocomplete: "email" %>
			</div><br />

			<div class="field">
				<%= form.label :password %><br />
				<%= form.password_field :password, autocomplete: "current-password" %>
			</div><br />

			<% if devise_mapping.rememberable? %>
				<div class="field">
					<%= form.check_box :remember_me %>
					<%= form.label :remember_me %>
				</div>
			<% end %>

			<div class="actions">
				<%= form.submit t('.sign_in') %>
			</div>
		<% end %>

		<!-- Remind Passowrd -->
		<div id="formFooter">
			<div class="actions">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>