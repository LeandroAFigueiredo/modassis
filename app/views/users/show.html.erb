
<h1> <%= "#{User.model_name.human(count: 1)}"%></h1>

<form>

  <div class="form row">
    <div class="col-md-4 mb-3">
      <strong>Tipo de Usuário: </strong>
        <% if (@user.admin == true) %>
          Usuário Adminsitrador
        <% else %>
          Usuário Comum
        <% end %>
    </div>
  </div>  

  <div class="form row">
    <div class="col-md-4 mb-3">
      <strong>Nome: </strong>
        <%= @user.nome %>
    </div>

    <div class="col-md-4 mb-3">
      <strong>E-mail: </strong> 
        <%= @user.email %>
    </div>
  </div>

  <div class="form row">

    <div class="col-md-4 mb-3">
      <strong>CPF: </strong>    
      <%= format_cpf(@user.cpf) %>
    </div>
    
    <div class="col-md-4 mb-3">
      <strong>Data de Nascimento: </strong>    
      <%= @user.dt_nasc %>
    </div>
    
  </div>

  <div class="form row">

    <div class="col-md-4 mb-3">
      <strong>RG: </strong>    
      <%= @user.rg %>
    </div>
    
    <div class="col-md-4 mb-3">
     <strong>Emissor: </strong>    
      <%= @user.rg_emissor %>
    </div>
    
  </div>
  <br/>

  <label> Endereço</label>

  <div class="table table-bordered"> 

    <div class="form row">

      <div class="col-md-4 mb-3">
        <strong>Endereço: </strong>    
        <%= @user.end_logr %>
      </div>
      
      <div class="col-md-4 mb-3">
        <strong>Número: </strong>    
        <%= @user.end_num %>
      </div>
      
    </div>

    <div class="form row">

      <div class="col-md-4 mb-3">
        <strong>Complemento: </strong>    
        <%= @user.end_compl %>
      </div>
      
      <div class="col-md-4 mb-3">
        <strong>CEP: </strong>    
        <%= @user.cep %>
      </div>
    </div>

      <div class="form row">

      <div class="col-md-4 mb-3">
         <strong>Cidade: </strong>    
        <%= @user.end_cid %>
      </div>
      
      <div class="col-md-4 mb-3">
         <strong>UG: </strong>    
        <%= @user.end_ug %>
      </div>
      
    </div>
   </div>
 
  <label> Telefone</label>

  <div class="table table-bordered"> 

    <div class="form row">

      <div class="col-md-4 mb-3">
        <strong>Telefone Fixo: </strong>    
        <%= @user.tel_fixo %>
      </div>
      
      <div class="col-md-4 mb-3">
        <strong>Celular: </strong>    
        <%= @user.tel_cel %>
      </div>
      
    </div>
   </div>

<br/>

<div class="field">
    <%= link_to 'Editar', edit_user_path(@user), class: "btn btn-primary" %>
    <%= link_to 'Voltar', users_path, class: "btn btn-success" %>
  </div>
</form>