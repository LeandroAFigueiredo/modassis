<script>
  $.notify("<%= notice %>", "success");
</script>

<div class="row">
  <div class="col-sm-9">
    <h1><%= "#{User.model_name.human(count: 2)}" %></h1>
  </div>
</div>

 <br />
 <br />      

  <div class="row">
    <div class="col">

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
				      <td><%= user.nome %></td>
              <td><%= user.email %></td>
              <% #Mostra algum nÃºmero de telefone cadstrado, sendo o Celular o Principal %>
              <td>
                <% if(!user.tel_fixo.blank?) %>
                  <%= user.tel_fixo %>
                <% else %>
                  <%= user.tel_cel %>
                <% end %>      
              </td>          
				      <td><%= link_to t('buttons.show'), user, class: "btn btn-info" %></td>
				      <td><%= link_to t('buttons.edit'), edit_user_path(user), class: "btn btn-warning" %></td>
            
            <% if can? :destroy, User %>  
              <td><%= link_to t('buttons.destroy'), user, method: :delete, data: { confirm: t('messages.confirm') }, class: "btn btn-danger" %></td>
            
            <% end %>
          
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<%= will_paginate @user %>